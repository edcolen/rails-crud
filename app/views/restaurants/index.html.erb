<h1 class="text-center">Restaurants</h1>

<%= link_to 'Add restaurant', new_restaurant_path, class: 'btn btn-sm btn-primary' %>
<hr>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-4">
      <%= link_to restaurant.name, restaurant_path(restaurant), class: 'text-decoration-none' %>
    </div>
  <% end %>
</div>
